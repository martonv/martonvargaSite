---
const skills = [
  "Astro / HTML / CSS / JavaScript",
  "Shopify (Liquid, theme architecture, storefront UX)",
  "Python (scripts, APIs, automation)",
  "Product & growth engineering",
  "Technical + customer-facing writing",
];

const experience = [
  {
    role: "Founder",
    org: "Varga Venture Consulting",
    time: "Jun 2023 – Present",
    bullets: [
      "Built conversion-focused marketing sites and internal tools for small businesses.",
      "Delivered web/software solutions end-to-end: discovery, build, launch, iteration.",
    ],
  },
  {
    role: "Software Engineer & Formulation Chemist",
    org: "Restorative Industries, LLC",
    time: "Jun 2023 – Present",
    bullets: [
      "Developed and maintained Shopify storefronts, features and UX improvements.",
      "Built internal tools to streamline order management and customer experience.",
      "Created automation scripts for bulk ops and analytics via APIs.",
      "Formulated new chemical products and optimized existing formulations.",
    ],
  },
];

const projects = [
  {
    name: "Strokes Gained Golf Simulator",
    desc: "A simple, premium website + booking funnel for an indoor simulator business.",
    tag: "Astro + conversion UX",
  },
  {
    name: "IronSeal Concrete Products",
    desc: "Brand + product pages designed for clarity, trust, and B2B growth.",
    tag: "Brand system",
  },
  {
    name: "Interactive Project Planner",
    desc: "Multi-step selector that guides customers to the right products.",
    tag: "UI components",
  },
];

const research = [
  {
    name: "Python Software for FTMW Spectrometer",
    desc: "Developed overarching Python software controlling oscilloscopes, Fabry-Perot cavity mirror actuator, delay generator, synthesizers, and other components for a novel L-shaped FTMW spectrometer in Dr. Ranil Gurusinghe’s research lab. Built autonomous calibration, an overarching controller, and a user interface for spectrometer operation. Research presented at ISMS; publication pending.",
    tag: "Embedded Systems • Python • Physical chemistry",
    link: "/researchPosterFTMW.pdf",
    time: "June 2023 - May 2024"
  },
  {
    name: "Quantifying Gaseous Diffusion through PTFE Membranes",
    desc: "Engineered an apparatus to measure diffusion rates of gases through PTFE membranes with and without a thermal gradient. Modeled diffusion behavior from experimental data. Research contributed to an underground soil profiling sensor concept (NSF Grant) for agricultural optimization in Dr. Holly Stretz research lab; presented at AIChE 2024.",
    tag: "Heat/Mass Transport • Material Science • Modeling",
    link: "/insert-link-here",
    time: "Oct 2022 - Dec 2023"
  },
];

const education = [
  {
    school: "Tennessee Technological University",
    degree: "B.S. in Chemical Engineering",
    time: "Graduated May 2024",
    bullets: [
      "Selected coursework: thermodynamics, heat, fluids, & mass transfer, reaction engineering.",
    ],
  },
];
---

<section class="wrap" aria-label="Resume content">
  <div class="hero card">
    <div class="hero__left">
      <h1 class="h1">Systems-minded engineer driven by continuous learning and real-world impact.</h1>
      <p class="lede">
        I design and build fast, clean web experiences and custom implementations that drive revenue, reduce manual work, and scale business operations. Strong in front-end implementation, tooling, and pragmatic problem-solving, with a deep interest in applied physics, optimization, and elegant technical solutions.
      </p>

      <div class="ctaRow">
        <a class="btn" href="#experience">Experience</a>
        <a class="btn" href="#skills">Skills</a>
        <a class="btn" href="#projects">Projects</a>
        <a class="btn" href="#research">Research</a>
        <a class="btn" href="#education">Education</a>
      </div>
    </div>

    <div class="hero__right">
      <div class="stat">
        <div class="stat__k">Placeholder</div>
        <div class="stat__v">Placeholder</div>
      </div>
      <div class="stat">
        <div class="stat__k">Placeholder</div>
        <div class="stat__v">Placeholder</div>
      </div>
      <div class="stat">
        <div class="stat__k">Placeholder</div>
        <div class="stat__v">Placeholder</div>
      </div>
    </div>
  </div>

  <div class="grid">
    <section class="card" id="experience" aria-labelledby="exp-title">
      <h2 class="h2" id="exp-title">Experience</h2>

      <div class="stack">
        {experience.map((job) => (
          <article class="item">
            <div class="item__top">
              <div>
                <div class="item__role">{job.role}</div>
                <div class="item__org">{job.org}</div>
              </div>
              <div class="item__time">{job.time}</div>
            </div>

            <ul class="bullets">
              {job.bullets.map((b) => <li>{b}</li>)}
            </ul>
          </article>
        ))}
      </div>
    </section>

    <aside class="card" id="skills" aria-labelledby="skills-title">
      <h2 class="h2" id="skills-title">Skills</h2>
      <ul class="skills">
        {skills.map((s) => (
          <li class="skill">
            <span class="check" aria-hidden="true">✓</span>
            <span>{s}</span>
          </li>
        ))}
      </ul>
    </aside>
  </div>

  <section class="card" id="projects" aria-labelledby="proj-title">
    <div class="sectionHead">
      <h2 class="h2" id="proj-title">Selected Projects</h2>
      <div class="sectionHint">Product + UX</div>
    </div>

    <div class="cards">
      {projects.map((p) => (
        <article class="mini">
          <div class="mini__tag">{p.tag}</div>
          <div class="mini__name">{p.name}</div>
          <p class="mini__desc">{p.desc}</p>
        </article>
      ))}
    </div>
  </section>

  {/* Research  */}
  <section class="card" id="research" aria-labelledby="research-title">
    <div class="sectionHead">
      <h2 class="h2" id="research-title">Research</h2>
      <div class="sectionHint">Systems + measurement + modeling</div>
    </div>

    <div class="researchCards">
      {research.map((r) => (
        <article class="mini mini--research">
          <div class="mini__tag">{r.tag}</div>
          <div class="item__top">
          <div class="mini__name">{r.name}</div>
          <div class="item__time">{r.time}</div>
          </div>
          <p class="mini__desc">{r.desc}</p>

          {r.link && (
            <a class="btn btn-pad" href={r.link}>
              Research Poster
            </a>
          )}
        </article>
      ))}
    </div>
  </section>

  {/* Education */}
  <section class="card" id="education" aria-labelledby="edu-title">
    <div class="sectionHead">
      <h2 class="h2" id="edu-title">Education</h2>
      <div class="sectionHint">Brief + skimmable</div>
    </div>

    <div class="stack">
      {education.map((e) => (
        <article class="edu">
          <div class="edu__top">
            <div>
              <div class="edu__school">{e.school}</div>
              <div class="edu__degree">{e.degree}</div>
            </div>
            <div class="edu__time">{e.time}</div>
          </div>

          {e.bullets?.length ? (
            <ul class="bullets bullets--light">
              {e.bullets.map((b) => <li>{b}</li>)}
            </ul>
          ) : null}
        </article>
      ))}
    </div>
  </section>
</section>

<style>
  .wrap{ display: grid; gap: 1.25rem; padding: 1.25rem 0;}

  .card{
    background: var(--card);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    border: 1px solid rgba(0,0,0,0.06);
    padding: 1.25rem;
  }

  .hero{
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 1.25rem;
    align-items: start;
    border: 1px solid rgba(0, 97, 85, 0.16);
  }

  .h1{
    margin: 0;
    font-size: clamp(1.6rem, 2.6vw, 2.2rem);
    line-height: 1.15;
    color: var(--promo-moderate);
    letter-spacing: 0.2px;
  }

  .lede{
    margin: 0.85rem 0 1.1rem;
    color: var(--muted);
    font-size: 1.03rem;
  }

  .ctaRow{
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .btn{
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.62rem 0.9rem;
    border-radius: 999px;
    border: 1px solid rgb(14, 245, 218);
    color: var(--promo-subtle);
    background: rgba(0, 97, 85, 0.06);
    font-weight: 800;
    text-decoration: none;
    transition: transform 0.12s ease, box-shadow 0.12s ease;
  }
  .btn:hover{
    text-decoration: none;
    transform: translateY(-1px);
    box-shadow: var(--ring);
  }

  .btn-pad{
    margin: 1rem 0 0.5rem 0 !important;
  }

  .btn--primary{
    background: var(--promo-main);
    border-color: rgba(0,0,0,0.05);
    color: white;
  }

  .hero__right{
    display: grid;
    gap: 0.7rem;
  }

  .stat{
    border-radius: 14px;
    padding: 0.9rem;
    border: 1px solid rgba(0,0,0,0.06);
    background: linear-gradient(180deg, rgba(0, 123, 108, 0.09), rgba(0, 97, 85, 0.05));
  }
  .stat__k{
    font-weight: 900;
    font-size: 1.05rem;
    color: var(--promo-moderate);
  }
  .stat__v{
    margin-top: 0.15rem;
    color: var(--muted);
    font-weight: 650;
  }

  .grid{
    display: grid;
    grid-template-columns: 1.6fr 0.9fr;
    gap: 1.25rem;
  }

  .h2{
    margin: 0 0 0.75rem;
    font-size: 1.15rem;
    font-weight: 900;
    color: var(--promo-moderate);
    letter-spacing: 0.2px;
  }

  .stack{ display: grid; gap: 0.9rem; }

  .item{
    padding: 0.95rem;
    border-radius: 14px;
    border: 1px solid rgba(0,0,0,0.06);
    background: radial-gradient(900px 520px at 20% 0%, rgba(0, 123, 108, 0.35), transparent 55%),
                radial-gradient(800px 500px at 85% 15%, rgba(9, 58, 52, 0.55), transparent 60%),
                linear-gradient(180deg, rgb(9 58 52), rgb(6 40 36));
  }

  .item__top{
    display: flex;
    gap: 0.75rem;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
  }

  .item__role{ font-weight: 900; color: var(--promo-subtle); }
  .item__org{ color: var(--muted); font-weight: 650; margin-top: 0.1rem; }
  .item__time{ color: rgb(163, 222, 211); font-weight: 750; }

  .bullets{
    margin: 0.6rem 0 0;
    padding-left: 1.1rem;
    color: var(--muted);
    font-weight: 600;
  }

  .bullets--light{
    color: rgba(240, 250, 248, 0.80);
  }

  .skills{
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.55rem;
  }

  .skill{
    display: flex;
    gap: 0.55rem;
    align-items: flex-start;
    padding: 0.65rem 0.7rem;
    border-radius: 14px;
    border: 1px solid rgba(0,0,0,0.06);
    background: radial-gradient(900px 520px at 20% 0%, rgba(0, 123, 108, 0.35), transparent 55%),
                radial-gradient(800px 500px at 85% 15%, rgba(9, 58, 52, 0.55), transparent 60%),
                linear-gradient(180deg, rgb(9 58 52), rgb(6 40 36));
    color: var(--muted);
    font-weight: 700;
  }

  .check{
    width: 1.4rem;
    height: 1.4rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    background: radial-gradient(900px 520px at 20% 0%, rgba(0, 123, 108, 0.35), transparent 55%),
                radial-gradient(800px 500px at 85% 15%, rgba(9, 58, 52, 0.55), transparent 60%),
                linear-gradient(180deg, rgb(9 58 52), rgb(6 40 36));
    color: var(--promo-moderate);
    font-weight: 1000;
    flex: 0 0 auto;
    margin-top: 0.02rem;
  }

  .cards{
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.9rem;
  }

  .researchCards{
  }

  .mini{
    padding: 0.95rem;
    border-radius: 14px;
    border: 1px solid rgba(0,0,0,0.06);
    background: rgba(0, 97, 85, 0.03);
    transition: transform 0.12s ease, box-shadow 0.12s ease, border-color 0.12s ease;
    margin-bottom: 1.25rem;
  }

  .mini:hover{
    transform: translateY(-1px);
    box-shadow: var(--ring);
    border-color: rgba(0, 97, 85, 0.18);
  }

  .mini--research{
    background: radial-gradient(900px 520px at 20% 0%, rgba(0, 123, 108, 0.35), transparent 55%), radial-gradient(800px 500px at 85% 15%, rgba(9, 58, 52, 0.55), transparent 60%), linear-gradient(180deg, rgb(9 58 52), rgb(6 40 36));
    
  }

  .mini__tag{
    display: inline-flex;
    padding: 0.3rem 0.55rem;
    border-radius: 999px;
    background: rgba(0, 97, 85, 0.10);
    border: 1px solid rgba(0, 97, 85, 0.16);
    color: var(--promo-subtle);
    font-weight: 900;
    font-size: 0.82rem;
  }

  .mini__name{
    margin-top: 0.6rem;
    font-weight: 950;
    color: rgb(163, 222, 211);
  }

  .mini__desc{
    margin: 0.4rem 0 0;
    color: var(--muted);
    font-weight: 650;
  }

  .mini__link{
    margin-top: 0.75rem;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-weight: 900;
    text-decoration: none;
    color: var(--promo-subtle);
    border-bottom: 1px solid rgba(0, 97, 85, 0.22);
    padding-bottom: 0.05rem;
  }
  .mini__link:hover{
    text-decoration: none;
    border-bottom-color: rgba(0, 97, 85, 0.42);
  }

  .sectionHead{
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 0.75rem;
    margin-bottom: 0.25rem;
    flex-wrap: wrap;
  }

  .sectionHint{
    font-weight: 800;
    color: rgba(15,31,28,0.55);
  }

  .edu{
    padding: 0.95rem;
    border-radius: 14px;
    border: 1px solid rgba(0,0,0,0.06);
    background: rgba(0, 97, 85, 0.03);
  }

  .edu__top{
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .edu__school{
    font-weight: 950;
    color: var(--promo-moderate);
  }

  .edu__degree{
    margin-top: 0.12rem;
    color: var(--muted);
    font-weight: 700;
  }

  .edu__time{
    color: rgb(163, 222, 211);
    font-weight: 750;
  }

  @media (max-width: 920px){
    .hero{ grid-template-columns: 1fr; }
    .grid{ grid-template-columns: 1fr; }
    .cards{ grid-template-columns: 1fr; }
  }
</style>
