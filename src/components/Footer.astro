---
const year = new Date().getFullYear();
---
<footer class="foot">
  <div class="container foot__inner">
    <div class="left">
      <span class="mark" aria-hidden="true"></span>
      <span>© {year} • Built with Astro</span>
    </div>

    <div class="right">
      <a href="#top" class="toTop" aria-label="Back to top">Back to top ↑</a>
    </div>
  </div>
</footer>

<style>
  .foot{
    border-top: 1px solid rgba(0,0,0,0.06);
    background: #0b211e;
    backdrop-filter: blur(10px);
  }

  .foot__inner{
    padding: 1.1rem 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    flex-wrap: wrap;
    color: rgba(15,31,28,0.72);
    font-weight: 650;
  }

  .left{
    display: inline-flex;
    gap: 0.6rem;
    align-items: center;
  }

  .mark{
    width: 10px;
    height: 10px;
    border-radius: 999px;
    background: var(--promo-main);
    box-shadow: 0 0 0 5px rgba(0, 123, 108, 0.12);
  }

  .toTop{
    color: var(--promo-subtle);
    font-weight: 900;
  }
</style>
