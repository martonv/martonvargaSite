---
const { title, lede, primaryCtaHref = "#projects", primaryCtaLabel = "View Projects", secondaryCtaHref = "#contact", secondaryCtaLabel = "Contact" } = Astro.props;
---

<section class="hero">
  <div class="hero__glow" aria-hidden="true"></div>
  <div class="container hero__inner split">
    <div class="stack no-gap">
      <div class="kicker">Software + Chemical Engineer</div>
      <h1 class="h1">{title}</h1>
      <p class="lede">{lede}</p>

      <div class="hero__actions">
        <a class="btn btn--primary" href={primaryCtaHref}>{primaryCtaLabel}</a>
        <a class="btn btn--ghost" href={secondaryCtaHref}>{secondaryCtaLabel}</a>
      </div>
    </div>

    <div class="card card--glass">
      <div class="card__pad stack">
        <div class="section-title">Quick overview</div>
        <div class="muted">Shopify Dev. · Software Eng. · Business Development · Coatings R&D</div>
        <div class="row" style="flex-wrap: wrap;">
          <span class="btn" style="pointer-events:none;">Astro/Tailwind/HTML/CSS/JS</span>
          <span class="btn" style="pointer-events:none;">Shopify/Liquid/GraphQL/Custom Apps</span>
          <span class="btn" style="pointer-events:none;">Python/Flask/NodeJS/FASTAPI Backends</span>
          <span class="btn" style="pointer-events:none;">UX/UI Design</span>
          <span class="btn" style="pointer-events:none;">Product Engineering</span>
          <span class="btn" style="pointer-events:none;">Business Development</span>
        </div>
      </div>
    </div>
  </div>
</section>
